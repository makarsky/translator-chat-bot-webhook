{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-console": "warn",
        "no-use-before-define": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "parser": "flow",
                "trailingComma": "all"
            }
        ]
    }
}